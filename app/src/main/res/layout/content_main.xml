<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ImageView
        android:id="@+id/threedots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_1_"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"/>
    <TextView
        android:id="@+id/rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent a car"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/threedots"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="8dp"
        app:strokeColor="#000000">
        <ImageView
            android:src="@drawable/magnify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp" />
        <EditText
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="        Search"
            android:background="@null"/></com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/velikview"
            android:layout_width="350dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/search"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/blue"
            android:background="@color/blue">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/group"
                    android:layout_marginHorizontal="100dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right_thick"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bogamy"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="40dp" />
        </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/carview"
        android:layout_width="350dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/velikview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/blue"
        android:background="@color/blue">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_1_"
            android:layout_marginHorizontal="100dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_thick"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bogamy"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="40dp"
            />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/busview"
        android:layout_width="350dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/carview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/blue"
        android:background="@color/blue">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_2_"
            android:layout_marginHorizontal="100dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_thick"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bogamy"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="40dp" />

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>